<% layout("/layouts/boilerplate") %>
    <div class="row">

        <div class="col-8 offset-1 ">

            <body>

                <br><br>

                <!-- Displaying the details of the listing -->

                <h3> Listing details :</h3>

                <div class="card">
                    <img class="card-img-top show-img" src="<%= listing.image %>" alt="listing_image" />

                    <br><br>
                

                    <ul>
                        <li><b>Name</b>: <%= listing.title %>
                        </li>
                        <li><b>Description</b>: <%= listing.description %>
                        </li>
                        <li>&#8377 <%= listing.price.toLocaleString("en-IN") %> /-</li>
                        <li><b>Location</b>: <%= listing.location %>
                        </li>
                        <li><b>Country</b>: <%= listing.country %>
                        </li>
                    </ul>
                    <br>

                    <div class="button">

                        <!-- Link to edit the listing -->
                        <button class="btn btn-dark add-btn edit"> <a href="/listings/<%= listing._id %>/edit"> Edit
                                this listing </a></button>
                        <br> <br>

                        <!-- Form to delete the listing -->
                        <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
                            <button class="btn btn-dark"> Delete this listing </button>
                        </form>


                    </div>


                </div>

            </body>


        </div>

    </div>